pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = '9f4187c3-8181-4d40-81d7-513dc9f140ce'
        DATABASE = credentials('c6813de8-97ee-47fb-a177-473320d8234e')
        DATABASE_USERNAME = credentials('5b7b4d1a-86b4-415e-8a31-29d2a1e43015')
        DATABASE_PASSWORD = credentials('d5761198-882a-4b7c-8732-6dcfa6fc0640')

    }
    stages {
        stage('Remove old build'){
            steps{

                sh 'docker stop propertybackend || true'
                sh 'docker rm propertybackend || true'
                sh 'docker system prune -af'
            }
        }
        stage('Build') {
            steps {
                // Checkout source code
                checkout scm

                // Build Docker image
                sh 'docker build -t propertybackend .'
            }
        }
        stage('Push to Docker Hub') {
            steps {

            withCredentials([usernamePassword(credentialsId: DOCKERHUB_CREDENTIALS, usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')])
           {
                    sh 'docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD'

                    // Tag Docker image
                    sh 'docker tag propertybackend joemuldowney/property-backend'

                    // Push Docker image to Docker Hub
                    sh 'docker push joemuldowney/property-backend'
           }
          }
        }
        stage('Deploy') {
            steps {
                    sh 'docker run -d -p 8060:8060 --name propertybackend \
                    -e DATABASE=$DATABASE \
                    -e DATABASE_USERNAME=$DATABASE_USERNAME \
                    -e DATABASE_PASSWORD=$DATABASE_PASSWORD \
                    joemuldowney/property-backend'

            }
        }
    }
}